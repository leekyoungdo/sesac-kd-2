    <h1>회원가입 get 요청</h1>
    <form action="/get" target="_blank" method="get">
        <input type="text" name ="id">
        <input type="password" name = "pw">
        <input type="text" name="name">
        <input type="text" name="email">
        <button type="submit">제출</button>
    </form>

    <h1>회원가입 post 요청</h1>
    <form action="/post/ver2" method="post">
        <input type="text" name ="id" pattern="^([a-zA-Z0-9가*힣]){4,12}$" title="소문자, 대문자, 한글, 숫자로 조합된 4~12자리로 입력">
        <input type="password" name = "pw" oninput="vaildCheckPw(this)">
        <div id= "error-pw"></div>
        <input type="text" name="name">
        <input type="text" name="email">
        <button type="submit">제출</button>
    </form>

    <script>
        function vaildCheckPw(el){
            const regexPw = /^([a-z0-9가*힣]){8,12}$/
            const value = el.value
            const error = document.getElementById("error-pw")
            // regexPw.test("검사하고 싶은값") => true or false return
            if(regexPw.test(value)){
                console.log("정규식 일치")
            }else {
                error.innerHTML = "소문자,숫자로 조합된 8~12자리로 입력"
                console.log("정규식 불일치")
            } 
        }
    </script>
</body>
</html>